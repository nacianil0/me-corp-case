@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Register</h1>

        @if (Model.HasReferralCode)
        {
            <div class="message message-info">
                You are registering as a <strong>Manager</strong> with a referral code.
            </div>
        }

        <div class="error-container">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="message message-error">@Model.ErrorMessage</div>
            }
        </div>

        <form asp-action="Register" method="post" id="registerForm">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-input" required />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReferralCode" class="form-label">Referral Code <span class="optional-text">(Optional)</span></label>
                <input asp-for="ReferralCode" type="text" class="form-input" placeholder="Enter referral code if you have one" />
                <span asp-validation-for="ReferralCode" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-input" required />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-input" required />
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>

            <input type="hidden" asp-for="CaptchaToken" id="captchaToken" />

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <p class="auth-link">
            Already have an account? <a href="/Auth/Login">Login</a>
        </p>
    </div>
</div>

@section Scripts {
    @if (ViewBag.HasValidCaptcha == true)
    {
        <script src="https://www.google.com/recaptcha/api.js?render=@ViewBag.SiteKey"></script>
        <script>
            (function() {
                var form = document.getElementById('registerForm');
                var captchaTokenInput = document.getElementById('captchaToken');
                var siteKey = '@ViewBag.SiteKey';
                
                function waitForRecaptcha(callback, maxAttempts) {
                    maxAttempts = maxAttempts || 50;
                    var attempts = 0;
                    
                    function check() {
                        attempts++;
                        if (typeof grecaptcha !== 'undefined' && grecaptcha.ready) {
                            console.log('reCAPTCHA loaded successfully');
                            callback();
                        } else if (attempts < maxAttempts) {
                            setTimeout(check, 100);
                        } else {
                            console.error('reCAPTCHA failed to load after ' + maxAttempts + ' attempts');
                            alert('reCAPTCHA failed to load. Please refresh the page.');
                        }
                    }
                    check();
                }
                
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    console.log('Form submitted, generating reCAPTCHA token...');
                    
                    waitForRecaptcha(function() {
                        grecaptcha.ready(function() {
                            console.log('reCAPTCHA ready, executing...');
                            grecaptcha.execute(siteKey, {action: 'register'})
                                .then(function(token) {
                                    console.log('reCAPTCHA token generated:', token ? 'Success' : 'Failed');
                                    if (token) {
                                        captchaTokenInput.value = token;
                                        console.log('Submitting form with token...');
                                        form.submit();
                                    } else {
                                        console.error('reCAPTCHA token generation returned empty');
                                        alert('reCAPTCHA verification failed. Please try again.');
                                    }
                                })
                                .catch(function(error) {
                                    console.error('reCAPTCHA error:', error);
                                    alert('reCAPTCHA verification failed: ' + (error.message || 'Unknown error'));
                                });
                        });
                    });
                });
            })();
        </script>
    }
    else
    {
        <script>
            document.getElementById('registerForm').addEventListener('submit', function(e) {
                document.getElementById('captchaToken').value = 'dev-bypass';
            });
        </script>
    }
}

