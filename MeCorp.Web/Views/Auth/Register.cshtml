@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Register</h1>

        @if (Model.HasReferralCode)
        {
            <div class="message message-info">
                You are registering as a <strong>Manager</strong> with a referral code.
            </div>
        }

        <div class="error-container">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="message message-error">@Model.ErrorMessage</div>
            }
        </div>

        <form asp-action="Register" method="post" id="registerForm">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-input" required />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReferralCode" class="form-label">Referral Code <span class="optional-text">(Optional)</span></label>
                <input asp-for="ReferralCode" type="text" class="form-input" placeholder="Enter referral code if you have one" />
                <span asp-validation-for="ReferralCode" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-input" required />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-input" required />
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>

            @if (ViewBag.HCaptchaEnabled == true)
            {
                <div class="form-group">
                    <div class="h-captcha" data-sitekey="@ViewBag.HCaptchaSiteKey"></div>
            <input type="hidden" asp-for="CaptchaToken" id="captchaToken" />
                </div>
            }

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <p class="auth-link">
            Already have an account? <a href="/Auth/Login">Login</a>
        </p>
    </div>
</div>

@if (ViewBag.HCaptchaEnabled == true)
    {
    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>
        <script>
            document.getElementById('registerForm').addEventListener('submit', function(e) {
            var response = document.querySelector('[name="h-captcha-response"]');
            if (response) {
                document.getElementById('captchaToken').value = response.value;
            }
            });
        </script>
}

