@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <h1 class="dashboard-title">Dashboard</h1>

    @if (Model.IsAdmin)
    {
        <div class="dashboard-card dashboard-card-full">
            <h2 class="card-title">User Statistics</h2>
            <div class="stats-grid">
                <div class="stat-item">
                    <span class="stat-value">@Model.TotalUsers</span>
                    <span class="stat-label">Total Users</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">@Model.CustomerCount</span>
                    <span class="stat-label">Customers</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">@Model.ManagerCount</span>
                    <span class="stat-label">Managers</span>
                </div>
            </div>
        </div>

        <div class="dashboard-card dashboard-card-full">
            <h2 class="card-title">All Users & Referrals</h2>
            <div class="users-table-wrapper">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th class="expand-col"></th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Joined</th>
                            <th class="referral-count-col">Referrals</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.AllUsersWithReferrals)
                        {
                            var hasReferrals = user.ReferralCount > 0;
                            <tr class="user-row @(hasReferrals ? "expandable" : "")" data-user-id="@user.Id" @(hasReferrals ? "onclick=toggleReferrals(this)" : "")>
                                <td class="expand-col">
                                    @if (hasReferrals)
                                    {
                                        <span class="expand-icon">▸</span>
                                    }
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="role-badge role-@user.Role.ToString().ToLower()">@user.Role</span>
                                </td>
                                <td class="date-cell">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="referral-count-col">
                                    @if (hasReferrals)
                                    {
                                        <span class="referrals-count">@user.ReferralCount</span>
                                    }
                                    else
                                    {
                                        <span class="no-referrals">0</span>
                                    }
                                </td>
                            </tr>
                            @if (hasReferrals)
                            {
                                <tr class="referrals-row" data-parent-id="@user.Id">
                                    <td colspan="5">
                                        <div class="referrals-collapse">
                                            <div class="referrals-list">
                                                @foreach (var referral in user.Referrals)
                                                {
                                                    <div class="referral-item">
                                                        <span class="referral-email">@referral.Email</span>
                                                        <span class="role-badge role-@referral.Role.ToString().ToLower()">@referral.Role</span>
                                                        <span class="referral-date">@referral.JoinedAt.ToString("MMM dd, yyyy")</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="dashboard-grid">
        <div class="dashboard-col-left">
            <div class="dashboard-card">
                <h2 class="card-title">Your Profile</h2>
                <div class="profile-info">
                    <div class="profile-row">
                        <span class="profile-label">Email:</span>
                        <span class="profile-value">@Model.Email</span>
                    </div>
                    <div class="profile-row">
                        <span class="profile-label">Role:</span>
                        <span class="profile-value role-badge role-@Model.Role.ToString().ToLower()">@Model.Role</span>
                    </div>
                    <div class="profile-row">
                        <span class="profile-label">Member Since:</span>
                        <span class="profile-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                    </div>
                </div>
            </div>

            <div class="dashboard-card">
                <h2 class="card-title">Your Referral Link</h2>
                <div class="referral-section">
                    <input type="text" id="referralLink" class="form-input referral-input" 
                           value="@Context.Request.Scheme://@Context.Request.Host@Model.ReferralLink" readonly />
                    <button type="button" id="copyBtn" class="btn btn-secondary" onclick="copyReferralLink()">Copy</button>
                </div>
                <p class="referral-note">Share this link to invite others. They will register as Managers.</p>
            </div>
        </div>

        <div class="dashboard-col-right">
            <div class="dashboard-card dashboard-card-stretch">
                <div class="referrals-header">
                    <h2 class="card-title">Your Referrals</h2>
                    <span class="referrals-count">@Model.Referrals.Count</span>
                </div>
                @if (Model.HasReferrals)
                {
                    <div class="referrals-table-wrapper">
                        <table class="referrals-table">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Joined</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var referral in Model.Referrals)
                                {
                                    <tr>
                                        <td>@referral.Email</td>
                                        <td>
                                            <span class="role-badge role-@referral.Role.ToString().ToLower()">@referral.Role</span>
                                        </td>
                                        <td class="date-cell">@referral.JoinedAt.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>No referrals yet. Share your link to start inviting others!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyReferralLink() {
            const input = document.getElementById('referralLink');
            const btn = document.getElementById('copyBtn');
            navigator.clipboard.writeText(input.value).then(function() {
                btn.textContent = 'Copied!';
                setTimeout(function() {
                    btn.textContent = 'Copy';
                }, 2000);
            });
        }

        function toggleReferrals(row) {
            const userId = row.dataset.userId;
            const referralsRow = document.querySelector(`.referrals-row[data-parent-id="${userId}"]`);
            const expandIcon = row.querySelector('.expand-icon');
            
            if (referralsRow.classList.contains('expanded')) {
                referralsRow.classList.remove('expanded');
                expandIcon.textContent = '▸';
                row.classList.remove('expanded');
            } else {
                referralsRow.classList.add('expanded');
                expandIcon.textContent = '▾';
                row.classList.add('expanded');
            }
        }
    </script>
}

