@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <h1 class="dashboard-title">Dashboard</h1>

    @if (Model.IsAdmin)
    {
        <div class="dashboard-card">
            <h2 class="card-title">User Statistics</h2>
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Metric</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Users</td>
                        <td>@Model.TotalUsers</td>
                    </tr>
                    <tr>
                        <td>Customers</td>
                        <td>@Model.CustomerCount</td>
                    </tr>
                    <tr>
                        <td>Managers</td>
                        <td>@Model.ManagerCount</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    <div class="dashboard-card">
        <h2 class="card-title">Your Profile</h2>
        <div class="profile-info">
            <div class="profile-row">
                <span class="profile-label">Email:</span>
                <span class="profile-value">@Model.Email</span>
            </div>
            <div class="profile-row">
                <span class="profile-label">Role:</span>
                <span class="profile-value role-badge role-@Model.Role.ToString().ToLower()">@Model.Role</span>
            </div>
            <div class="profile-row">
                <span class="profile-label">Member Since:</span>
                <span class="profile-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
            </div>
        </div>
    </div>

    <div class="dashboard-card">
        <h2 class="card-title">Your Referral Link</h2>
        <div class="referral-section">
            <input type="text" id="referralLink" class="form-input referral-input" 
                   value="@Context.Request.Scheme://@Context.Request.Host@Model.ReferralLink" readonly />
            <button type="button" id="copyBtn" class="btn btn-secondary" onclick="copyReferralLink()">Copy</button>
        </div>
        <p class="referral-note">Share this link to invite others. They will register as Managers.</p>
    </div>
</div>

@section Scripts {
    <script>
        function copyReferralLink() {
            const input = document.getElementById('referralLink');
            const btn = document.getElementById('copyBtn');
            navigator.clipboard.writeText(input.value).then(function() {
                btn.textContent = 'Copied!';
                setTimeout(function() {
                    btn.textContent = 'Copy';
                }, 2000);
            });
        }
    </script>
}

